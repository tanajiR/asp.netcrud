
@{
    ViewBag.Title = "Login";
}

@{ Html.RenderPartial("_PartialDemo");}
<div class="row">
    <div class="col-sm-6">
        <h4 class="text-center">Login</h4>
        <form action="/account/login" method="post">
            <hr />
            <div class="form-group row">
                <div class="col-sm-4">
                    <label>Email</label><label class="pull-right">:</label>
                </div>
                <div class="col-sm-8">
                    <input type="text" name="email" class="form-control" placeholder="Enter Username" required />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <label>Password</label><label class="pull-right">:</label>
                </div>
                <div class="col-sm-8">
                    <input type="password" name="password" class="form-control" placeholder="Enter Password" required />
                </div>
            </div>
            <hr />
            <div class="form-group row">
                <div class="col-sm-2">
                    <input type="submit" value="Login" class="btn btn-primary btn-block" />
                </div>
                <div class="col-sm-2">
                    <input type="reset" value="reset" class="btn btn-primary btn-block" />
                </div>
                <p class="text-danger">
                    @ViewData["msg"]
                </p>
            </div>
        </form>
    </div>
</div>

