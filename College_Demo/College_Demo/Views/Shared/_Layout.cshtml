<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @RenderSection("scripts", required: false)
</head>
<body>
    @{ 
        var loginUser = Session["loginUser"] as College_Demo.Models.User;
    }
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">College Demo</a>
            </div>
            <ul class="nav navbar-nav">
                @if (loginUser == null)
                {
                    <li class="active" id="HomeL"><a href="/"><span class="glyphicon glyphicon-home"></span> Home</a></li>
                    <li><a href="@Url.Action("AboutUs","Home")"><span class="glyphicon glyphicon-info-sign"></span> About Us</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-phone-alt"></span> Contact Us</a></li>
                }
                else
                {
                    <li><a href="@Url.Action("managestudents","user")"><span class="glyphicon glyphicon-user-group"></span> Manage Students</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-user-group"></span> Manage Teachers</a></li>
                }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (loginUser == null)
                {
                    <li><a href="/account/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                    <li><a href="/account/signup"><span class="glyphicon glyphicon-user"></span> Signup</a></li>
                }
                else
                {
                    <li><a href="#"><span class="glyphicon glyphicon-user"></span> Welcome: @loginUser.full_name</a></li>
                    <li><a href="/account/logout"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
                }
            </ul>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="dvParent" style="min-height:80vh;">
            @RenderBody()
        </div>
    </div>

    <footer>
        <h4 class="text-center">&copy; All Rights Reserved</h4>
    </footer>
    @Scripts.Render("~/bundles/jquery")
</body>
</html>
